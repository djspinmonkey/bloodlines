<h1>New character</h1>

<% form_for(@character) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :gender %><br />
    <%= f.select :gender, Character::GENDERS.collect { |g| [g.to_s.humanize, g] }  %>
  </p>
  <p>
    <%= f.label :house %><br />
    <%= f.select :house_id, @houses.collect { |h| [h.name, h.id] }  %>
  </p>
  <p>
    <%= f.label :race %><br />
    <%= f.select :race, @races.collect(&:name) %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', characters_path %>
